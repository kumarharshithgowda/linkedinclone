<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Jobs | LinkedIn Clone</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

  <!-- Header / Navbar -->
  <nav class="bg-white shadow px-6 py-4 flex justify-between items-center">
    <h1 class="text-2xl font-bold text-blue-700">SkillVista</h1>
    <div class="space-x-4">
      <a href="/profile" class="text-gray-700 hover:text-blue-700">Profile</a>
      <a href="/jobs" class="text-blue-700 font-semibold">Jobs</a>
      <a href="/internships" class="text-gray-700 hover:text-blue-700">Internships</a>
      <a href="/skills" class="text-gray-700 hover:text-blue-700">Skill Test</a>
    </div>
  </nav>

  <!-- Main Job Listings Section -->
  <main class="max-w-5xl mx-auto p-6">
    <h2 class="text-3xl font-bold mb-6"><CENTRE>JOBS</CENTRE></h2>

    <% if (jobs.length === 0) { %>
      <p class="text-gray-600">No jobs found. Please check back later.</p>
    <% } else { %>
      <div class="space-y-6">
        <% jobs.forEach(job => { %>
          <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition duration-300">
            <div class="flex justify-between items-center">
              <div>
                <h3 class="text-xl font-semibold"><%= job.title %></h3>
                <p class="text-gray-700"><%= job.company %> â€¢ <%= job.location %></p>
              </div>
              <p class="text-sm text-gray-500">Posted on <%= new Date(job.posted_date).toLocaleDateString() %></p>
            </div>
            <p class="mt-3 text-gray-600"><%= job.description %></p>
            <button class="mt-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700"><a href="<%=jobs.link%>">Apply Now</a></button>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>

</body>
</html>


